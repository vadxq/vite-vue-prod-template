{
  "name": "vite-vue-prod-template",
  "version": "0.1.0",
  "description": "vite-vue-prod-template",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build --config vite.config.build.ts",
    "serve": "vite preview",
    "log": "npx conventional-changelog --config ./node_modules/@commitlint/cli -i CHANGELOG.md -s -r 0",
    "prepare": "husky install",
    "lint": "npx lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vadxq/vite-vue-prod-template.git"
  },
  "keywords": [
    "vue3"
  ],
  "author": "vadxq",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vadxq/vite-vue-prod-template/issues"
  },
  "homepage": "https://github.com/vadxq/vite-vue-prod-template#readme",
  "dependencies": {
    "vue": "^3.0.5",
    "vue-router": "^4.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@rollup/plugin-eslint": "^8.0.1",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vitejs/plugin-legacy": "^1.3.2",
    "@vitejs/plugin-vue": "^1.2.2",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.25.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.9.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "sass": "^1.32.12",
    "stylelint": "^13.13.0",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.2.0",
    "vite": "^2.2.3",
    "vue-tsc": "^0.0.24"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "vue/no-unused-components": "off",
      "no-debugger": "off"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "prettier -w",
    "*.{ts,tsx,js,vue}": "eslint --fix",
    "*.{vue,css,scss,less,sass}": "stylelint --fix",
    "*": "prettier -w -u"
  }
}
